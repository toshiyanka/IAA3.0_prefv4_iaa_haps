#!/usr/bin/csh -f

set SIP_TOOL_NAME=`echo $0 | sed -e 's/.*\///'`
##############################
# UNIX Environment setup
##############################
if (! $?SIP_NO_SETUP) then
   pushd  ../../../scripts
   source setup -ft
   popd
endif

lintra  -top sbendpoint \
        -cfg $LINTRARULES/LintraSoCConfig.xml \
        -rep lint_sbendpoint.rpt \
        -wd ../ \
        -wf iosfsb_waivers.xml \
        -lira \
        ../../../source/rtl/iosfsbc/common/*.sv \
        ../../../source/rtl/iosfsbc/endpoint/*.sv \
        +incdir+../../../source/rtl/iosfsbc/common | tee lint_sbendpoint.log

