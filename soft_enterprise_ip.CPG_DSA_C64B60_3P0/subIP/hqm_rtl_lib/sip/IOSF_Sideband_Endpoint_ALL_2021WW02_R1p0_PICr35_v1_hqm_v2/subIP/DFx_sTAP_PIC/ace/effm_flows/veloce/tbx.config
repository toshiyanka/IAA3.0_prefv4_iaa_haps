##  -allow_4ST :Allows 4-state (X/Z) reads. emulation set x/z to 0
rtlc -allow_4ST

#sllows intra assigment delays
rtlc -allow_IAD 

#default upf options
rtlc -upf_file $EMUL_CFG_DIR/stap.upf
rtlc -upf_options "-dump_upf_report -upf_allow_netport_recreation -pa_error_on 2132 -pa_error_on 2130"
rtlc -pa_corrupt_value 0
rtlc -upf_options "-upf_extract_portstate_from_powerstate" 
## Allow_ISL : Allows incomplete sensitivity lists of the design.
rtlc -allow_ISL

# allow clock variable to be used as data
rtlc -allow_CVD

# Allow $display and other similar system tasks in xRTL modules
rtlc -compile_display

# Suppress warning messages
veanalyze -suppress ANLZ-1027 -suppress ANLZ-1095 -suppress ANLZ-1356 -suppress ANLZ-1075 -suppress ANLZ-1029 -suppress ANLZ-1062 -suppress ANLZ-1068 -suppress ANLZ-2044 -suppress ANLZ-1378
veanalyze -suppress ANLZ-2429 -suppress ANLZ-1349 -suppress ANLZ-2549
comp -suppress RTLC-2429 -suppress RTLC-10187

# Globalization of defines/macros in libs, multi file compilation unit
veanalyze -mfcu
rtlc -mfcu

# compile debussy
comp -debussy

## vcs compat support non lrm constructs that work on vcs
## ar mentor should this be passed to vanalyze
veanalyze -vcs_compat  ## check cmd line
rtlc -vcs_compat
rtlc -sv31acompat
veanalyze  -sv31acompat

