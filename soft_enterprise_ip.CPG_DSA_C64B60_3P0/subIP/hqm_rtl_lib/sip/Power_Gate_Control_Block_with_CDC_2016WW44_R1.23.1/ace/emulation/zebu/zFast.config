Compile:suppressSynthMessages= (
    1882 #SRID Z-1-8 only Boolean assertion expression may not call a function
    5257 # [110.5257] JEF found in BXT PCS macro which tries to use part selects for bits which do not exist.
    5255 # [110.5255] JEF found in BXT PCS - need to understand problem better
)

# Use falcon specific style of library parsing
Compile:FullLibDirFile=True

Compile:MaxLoopIterations=33000
Compile:DropWriteOnlyMemories=True

# This will let $time to be replaced with '0 during synthesis
Compile:ClobberHWStasks=($$time=0) 


#SVA enabling
SVA:FastKill = true
SVA:DebugConversion=true
SVA:KillUnsupported=true
Compile:KillSvaProcLoop=true
Compile:Sva:FullModeAll=false

Compile:DumpAfterKillSva=false
Compile:CaseInsensitiveLibrarySearch=true
OLDPROBE=false

# earbili for sva auto disabling afer first firing
zFe:SvaAutoDisable=true

# use the new mixed language flow
newmixedflow=true

# to support initial blocks
Compile:RIRM=true
