# zFast verbose + debug
@zFE:verbose=1
@zFE:debug=1
@configverbose=true

# Separates gnd cells for undriven nets
compile:PreserveNamedSupply=true

# Allow uncomplete definition of VHDL BBoxes
#Compile:AllowBlackBoxForNoDefinition=false

Compile:suppressParserMessages=(
