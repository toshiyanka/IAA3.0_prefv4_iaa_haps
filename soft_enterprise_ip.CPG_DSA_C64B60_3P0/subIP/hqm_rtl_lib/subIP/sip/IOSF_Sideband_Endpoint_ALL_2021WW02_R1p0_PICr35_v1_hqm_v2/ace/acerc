# .acerc
#
# Remember - the PWA is the first directory on search path.
#            the SEARCH_PATHS below are simply adding other
#            directoris to be searched for AFTER the PWA
# The PWA is <-eng>/<-pwa>
#------------------------------------------------------------------


%acerc = (
	  TEMP_SPACE	=> "$ENV{TMP}/$ENV{USER}/ace/soc",
	  UDF		=> [
			    "ace/soc.udf",
			    ],
	  LIBS          => ["ace/lib"],
	  SEARCH_PATHS	=> {
			    soc => [
					 "$ENV{SOC_ROOT}",
					 "$ENV{SOC_ROOT}/do_files",
					 ],
			   },
	  TEST_PATTERNS => ["tests", "tests/static_checks/"],

	  SHARED_RESULTS_DIR => "$ENV{SOC_ROOT}/compile_results",
	  
	  SITE_INDEP_PATHS => {
		default => [
			'/nfs/ace/eng',
		],
	  },
	  SITE_INDEP_POLICY => 'NA',  # Valid choices are ENFORCE, CHECK, undef or NA
	 );


