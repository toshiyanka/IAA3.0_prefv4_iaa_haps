             -vlog_opts=> ["-sv","+define+DC","+libext+.sv+.v+.vs",],
          },
          cdc_ClockDomainController_lib => {
             -hdl_spec => [ 'src/rtl/ClockDomainController/ClockDomainController.hdl', ],
