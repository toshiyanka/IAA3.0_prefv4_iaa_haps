             -sub_libs => [ "$ENV{CTECH_LIB_NAME_CDC}",  ],
             -vlog_opts=> ["-sv","+define+DC","+libext+.sv+.v+.vs",],
          },
       },
	
	    models => {
            cdc_pgcb_collection => {
               top => 'cdc_tooltb_lib.tooltb',
               libs => [
                  'cdc_pgcbunit_lib',
                  'cdc_ClockDomainController_lib',
                  'cdc_pgcbcg_lib',
                  'cdc_synccell_lib',
                  'cdc_tooltb_lib',
               ],
            },
        }, #End of models
    }, #End of PROJECT
    }, #End of HDLSpec
