##++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++##
## The top level hierarchy, for which this UPF represents, is purely structural
##++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++##

##++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++##
## TYPE A: IP that is all in a single power domain and has no power gated domains
##++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++##

## -------------------------------------------------------------------------
## Create non-Power Gated Domains
## -------------------------------------------------------------------------
## Create a default domain that will be connected to IP top level. It is recommended to use -include_scope for this domain.

create_power_domain pd_refclkdist_vccagent -include_scope

## -------------------------------------------------------------------------
##  Create Supply Ports, associated supply nets and connect them up
## -------------------------------------------------------------------------
## Each IP will at least have 2 power supply ports - SUPPLY and GROUND
## Each supply port will be a combination of the following:
## 1. A supply port
## 2. Associated supply net
## 3. Connection between supply net and supply port 

create_supply_port $SOC_VINFAON -direction in -domain pd_refclkdist_vccagent
create_supply_net  $SOC_VINFAON -domain pd_refclkdist_vccagent
connect_supply_net $SOC_VINFAON -ports $SOC_VINFAON

create_supply_port $SOC_GROUND -direction in -domain pd_refclkdist_vccagent
create_supply_net  $SOC_GROUND -domain pd_refclkdist_vccagent
connect_supply_net $SOC_GROUND -ports $SOC_GROUND

## -------------------------------------------------------------------------
## Set Primary Supply Nets for non-Power Gated Domain
## Each domain will have a power net and a ground net
## -------------------------------------------------------------------------
set_domain_supply_net pd_refclkdist_vccagent \
-primary_power_net $SOC_VINFAON \
-primary_ground_net $SOC_GROUND

#add_port_state $SOC_VINFAON             -state "refclkdist_SOC_VINFAON_MAX $SOC_SUPPLY_MAX"
add_port_state $SOC_VINFAON             -state "refclkdist_SOC_VINFAON_NOM $SOC_SUPPLY_NOM"
#add_port_state $SOC_VINFAON             -state "refclkdist_SOC_VINFAON_MIN $SOC_SUPPLY_MIN"
add_port_state $SOC_VINFAON             -state "refclkdist_SOC_VINFAON_OFF  off"
add_port_state $SOC_GROUND         -state "refclkdist_GROUND $SOC_GROUND_NOM"

##++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++##
## END OF TYPE A
##++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++##

##-------------------------------------------------------------------------
## Define Power State Table & Power Modes supported by the IP
##-------------------------------------------------------------------------
create_pst pst_refclkdist -supplies     "$SOC_VINFAON $SOC_GROUND"
add_pst_state  "refclkdist_ALL_ON"    -state { refclkdist_SOC_VINFAON_NOM    refclkdist_GROUND} -pst  pst_refclkdist  
add_pst_state  "refclkdist_ALL_OFF"   -state { refclkdist_SOC_VINFAON_OFF    refclkdist_GROUND} -pst  pst_refclkdist 


##++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++##
## END OF TYPE B
