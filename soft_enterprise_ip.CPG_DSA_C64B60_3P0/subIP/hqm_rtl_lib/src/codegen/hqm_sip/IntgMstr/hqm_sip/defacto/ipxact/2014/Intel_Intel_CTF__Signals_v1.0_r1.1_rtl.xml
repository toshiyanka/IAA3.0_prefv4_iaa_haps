<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<ipxact:abstractionDefinition xmlns:ipxact="http://www.accellera.org/XMLSchema/IPXACT/1685-2014" xmlns:snps="http://www.synopsys.com/SPIRIT-snps" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.accellera.org/XMLSchema/IPXACT/1685-2014 http://www.accellera.org/XMLSchema/IPXACT/1685-2014/index.xsd">

  <ipxact:vendor>Intel</ipxact:vendor>

  <ipxact:library>Intel</ipxact:library>

  <ipxact:name>CTF::Signals_rtl</ipxact:name>

  <ipxact:version>v1.0_r1.1</ipxact:version>

  <ipxact:busType library="Intel" name="CTF::Signals" vendor="Intel" version="v1.0_r1.1"/>

  <ipxact:ports>
    <ipxact:port>
      <ipxact:logicalName>trig_fabric_out</ipxact:logicalName>
      <ipxact:description>Trigger Fabric Output Request (sent from a sequencer)</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>TRIGFABWIDTH</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>TRIGFABWIDTH</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>trig_fabric_out_ack</ipxact:logicalName>
      <ipxact:description>Trigger Fabric Output Acknowledge</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>TRIGFABWIDTH</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>TRIGFABWIDTH</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>trig_fabric_in</ipxact:logicalName>
      <ipxact:description>Trigger Fabric Input Request (received by a sequencer)</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>TRIGFABWIDTH</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>TRIGFABWIDTH</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>trig_fabric_in_ack</ipxact:logicalName>
      <ipxact:description>Trigger Fabric Input Acknowledge</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>TRIGFABWIDTH</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>TRIGFABWIDTH</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
  </ipxact:ports>

  <ipxact:description>Revision: r1.1. Reference Trigger Fabric Interface to/from IP, parameter TRIGFABWIDTH defines the width of the fabric</ipxact:description>

  <ipxact:parameters>
    <ipxact:parameter parameterId="TRIGFABWIDTH" resolve="user" type="int">
      <ipxact:name>TRIGFABWIDTH</ipxact:name>
      <ipxact:description>Trigger Fabric Logical Width</ipxact:description>
      <ipxact:value>4</ipxact:value>
    </ipxact:parameter>
  </ipxact:parameters>

</ipxact:abstractionDefinition>
