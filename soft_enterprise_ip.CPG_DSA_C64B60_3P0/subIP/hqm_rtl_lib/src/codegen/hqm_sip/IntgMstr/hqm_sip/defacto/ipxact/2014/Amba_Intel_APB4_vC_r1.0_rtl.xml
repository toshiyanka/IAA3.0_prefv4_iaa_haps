<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<ipxact:abstractionDefinition xmlns:ipxact="http://www.accellera.org/XMLSchema/IPXACT/1685-2014" xmlns:snps="http://www.synopsys.com/SPIRIT-snps" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.accellera.org/XMLSchema/IPXACT/1685-2014 http://www.accellera.org/XMLSchema/IPXACT/1685-2014/index.xsd">

  <ipxact:vendor>Amba</ipxact:vendor>

  <ipxact:library>Intel</ipxact:library>

  <ipxact:name>APB4_rtl</ipxact:name>

  <ipxact:version>vC_r1.0</ipxact:version>

  <ipxact:busType library="Intel" name="APB4" vendor="Amba" version="vC_r1.0"/>

  <ipxact:ports>
    <ipxact:port>
      <ipxact:logicalName>PADDR</ipxact:logicalName>
      <ipxact:description>APB Address Bus.
It can be up-to 32 Bits wide</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>PADDR_WIDTH</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>PADDR_WIDTH</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>PSELx</ipxact:logicalName>
      <ipxact:description>APB Device Select Bus.
It indicates that the APB device is selected and the data transfer is required.Only one Select Signals can be Active during a transfer</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>PENABLE</ipxact:logicalName>
      <ipxact:description>APB Enable.
This signal indicates that second and subsequent cycles of an APB transfer</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>PWRITE</ipxact:logicalName>
      <ipxact:description>APB Operation .
This signal indicates that 
   HIGH:   Write Operation
    LOW:   Read Operation</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>PWDATA</ipxact:logicalName>
      <ipxact:description>APB Write Data Bus.
It is driven during write cycle when PWRITE is HIGH.
It can be up-to 32 Bits wide</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>PDATA_WIDTH</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>PDATA_WIDTH</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>PSTRB</ipxact:logicalName>
      <ipxact:description>APB Write Strobe Bus.
It indicates which byte lanes to update during a write transfer. Thers ie one write strobe for each 8 bits of write data bus.
It MUST not be active, during a read transfer.</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>optional</ipxact:presence>
          <ipxact:width>PDATA_WIDTH/8</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>optional</ipxact:presence>
          <ipxact:width>PDATA_WIDTH/8</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>PPROT</ipxact:logicalName>
      <ipxact:description>APB Protection Type
It indicates APB Transaction Types and Protection Level:
   PPROT[0]:   
             1'b0 :  Normal Access
             1'b1:   Priviledge Access
   PPROT[1]:  
             1'b0:  Secure Access
             1'b1:   Non-Secure Access
    PPROT[2]:
             1'b0:  Data Access
              1'b1:  Instruction Access</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>optional</ipxact:presence>
          <ipxact:width>3</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>optional</ipxact:presence>
          <ipxact:width>3</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>PREADY</ipxact:logicalName>
      <ipxact:description>APB Slave Ready .
The APB Slaves uses this signal to extend an APB transfer</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>PSLVERR</ipxact:logicalName>
      <ipxact:description>APB Slave Operation Status .
The APB Slaves uses this signal to indicates a APB transfer failure.</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>1</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
    <ipxact:port>
      <ipxact:logicalName>PRDATA</ipxact:logicalName>
      <ipxact:description>APB Read Data Bus.
The APB Slave drives it  during read cycle when PWRITE is LOW.
It can be up-to 32 Bits wide</ipxact:description>
      <ipxact:wire>
        <ipxact:onMaster>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>PDATA_WIDTH</ipxact:width>
          <ipxact:direction>in</ipxact:direction>
        </ipxact:onMaster>
        <ipxact:onSlave>
          <ipxact:presence>required</ipxact:presence>
          <ipxact:width>PDATA_WIDTH</ipxact:width>
          <ipxact:direction>out</ipxact:direction>
        </ipxact:onSlave>
        <ipxact:requiresDriver driverType="any"/>
      </ipxact:wire>
    </ipxact:port>
  </ipxact:ports>

  <ipxact:description>Revision: r1.0. ARM Advanced Peripheral Bus (APB) Interface for AMBA issue C Bus Protocol</ipxact:description>

  <ipxact:parameters>
    <ipxact:parameter parameterId="PADDR_WIDTH" resolve="user" type="int">
      <ipxact:name>PADDR_WIDTH</ipxact:name>
      <ipxact:description>APB Address Bus Width of PADDR Field</ipxact:description>
      <ipxact:value>8</ipxact:value>
    </ipxact:parameter>
    <ipxact:parameter parameterId="PSEL_WIDTH" resolve="user" type="int">
      <ipxact:name>PSEL_WIDTH</ipxact:name>
      <ipxact:description>APB device Select Bus Width of PSELx Field</ipxact:description>
      <ipxact:value>1</ipxact:value>
    </ipxact:parameter>
    <ipxact:parameter parameterId="PDATA_WIDTH" resolve="user" type="int">
      <ipxact:name>PDATA_WIDTH</ipxact:name>
      <ipxact:description>APB Data Bus Width of PDATA Field</ipxact:description>
      <ipxact:value>8</ipxact:value>
    </ipxact:parameter>
  </ipxact:parameters>

</ipxact:abstractionDefinition>
