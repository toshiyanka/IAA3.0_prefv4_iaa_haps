// IP TAP RDL example:
//    Two TAP controllers and two individual TDR registers

`include "ip_tap1.rdl"
`include "ip_tap2.rdl"
`include "ip_rtdr.rdl"

addrmap ip_top {
   name = "IP Top";
   desc = "IP Top description";

   // Instances of TAPs
   ip_tap1_def tap1;
   ip_tap2_def tap2;

   // Instances of individual TDR registers (with dedicated interfaces at IP level)
   // Represented by addrmap with TapType="reg_only"
   ip_rtdr_def individual_tdrs;
};
