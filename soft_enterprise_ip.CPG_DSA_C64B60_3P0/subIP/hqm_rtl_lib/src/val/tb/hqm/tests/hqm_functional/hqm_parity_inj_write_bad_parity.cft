## -- Write bad parity into qid_v memory
## ------------------------------------------------------------
wr hqm_system_csr.parity_ctl.write_bad_parity 0x1
rd hqm_system_csr.parity_ctl.write_bad_parity 0x1

wr hqm_system_csr.dir_qid_v[0]                0x1
rd hqm_system_csr.dir_qid_v[0]

poll hqm_system_csr.ingress_lut_err.dir_qid_v_perr 0x1 0x1 500
rd hqm_system_csr.ingress_lut_err.dir_qid_v_perr 0x1
rd hqm_system_csr.ingress_lut_err 0x40
wr hqm_system_csr.ingress_lut_err.dir_qid_v_perr 0x1
rd hqm_system_csr.alarm_hw_synd   0x80498400

