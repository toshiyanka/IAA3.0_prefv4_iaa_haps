## -- PVIM 1408636135 (Validate WB Survivability mode described by https://hsdes.intel.com/appstore/article/#/1408571557)

## -- Verify that optimization for DIR CQ 0 is disabled when disable_wb_opt field is set
hqm_cfg_test:disable_wb_opt_0 -dirtag disable_wb_opt_0

## -- Verify that only padding is disabled for DIR traffic and not LDB when pad_write_dir is set to 0
hqm_cfg_test:dir_ldb_pad_optimize_disable_dir_pad -dirtag dir_ldb_pad_optimize_disable_dir_pad

## -- Verify that only padding is disabled for LDB traffic and not DIR when pad_write_ldb is set to 0
hqm_cfg_test:dir_ldb_pad_optimize_disable_ldb_pad -dirtag dir_ldb_pad_optimize_disable_ldb_pad

## -- Disable padding for both LDB and DIR traffic
hqm_cfg_test:dir_ldb_pad_optimize_disable_ldb_dir_pad -dirtag dir_ldb_pad_optimize_disable_ldb_dir_pad

## -- Enable pad_first_write_ldb
hqm_cfg_test:dir_ldb_pad_optimize_enable_ldb_first_pad -dirtag dir_ldb_pad_optimize_enable_ldb_first_pad

## -- Enable pad_first_write_dir
hqm_cfg_test:dir_ldb_pad_optimize_enable_dir_first_pad -dirtag dir_ldb_pad_optimize_enable_dir_first_pad

## -- Enable both pad_first_write_dir and pad_first_write_ldb
hqm_cfg_test:dir_ldb_pad_optimize_enable_ldb_dir_first_pad -dirtag dir_ldb_pad_optimize_enable_ldb_dir_first_pad
