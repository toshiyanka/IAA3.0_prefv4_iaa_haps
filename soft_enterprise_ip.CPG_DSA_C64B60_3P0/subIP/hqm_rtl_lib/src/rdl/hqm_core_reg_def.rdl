reg hqm_core_ctrl_r {
     name = "HQM core control register";
     desc = "HQM core control register";
     
     default hw = rw;
     default sw = rw;
     regwidth = 32;

     field { AccessType = "RW"; name = "Ctrl Field0"; desc = "control field 0"; } ctrl_field0[7:0]         = 8'h00;
     field { AccessType = "RW"; name = "Ctrl Field1"; desc = "control field 1"; } ctrl_field1[15:8]        = 8'h11;
     field { AccessType = "RW"; name = "Ctrl Field2"; desc = "control field 2"; } ctrl_field2[23:16]       = 8'h22;
     field { AccessType = "RW"; name = "Ctrl Field3"; desc = "control field 3"; } ctrl_field3[31:24]       = 8'h33;
};

reg hqm_core_status_r {
     name = "HQM core status register";
