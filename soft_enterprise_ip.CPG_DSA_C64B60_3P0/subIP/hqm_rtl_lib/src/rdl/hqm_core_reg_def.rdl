     default sw = r;
     regwidth = 32;

     field { AccessType = "RO/V"; name = "Status Field0"; desc = "control field 0"; } status_field0[7:0] = 8'h0;
     field { AccessType = "RO/V"; name = "Status Field1"; desc = "control field 1"; } status_field1[15:8] = 8'h0;
     field { AccessType = "RO/V"; name = "Status Field2"; desc = "control field 2"; } status_field2[23:16] = 8'h0;
     field { AccessType = "RO/V"; name = "Status Field3"; desc = "control field 3"; } status_field3[31:24] = 8'h0;
};

